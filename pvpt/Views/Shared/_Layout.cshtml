<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

   <style>
       li:hover {
           background-color: lightgray;
           border-radius: 5%;
       }
       li {
           font-family: 'Comic Sans MS', Times, serif;
           font-size:17px;

       }

   </style>

</head>
<body>
    <div style="background-color:white;" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div style="margin:0px 150px 0px 0px;" class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="https://i.imgur.com/dQpMLc4.jpg" alt="W3Schools.com"> <!--logo Brasov-->
                <!--@Html.ActionLink("Welcome to Brasov", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })-->
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="margin:10px 20px; padding:5px 5px;">@Html.ActionLink("Acasă", "Index", "Home")</li>
                    <li style="margin:10px 20px; padding:5px 5px;">@Html.ActionLink("Despre", "About", "Home")</li>
                    <li style="margin:10px 20px; padding:5px 5px;">@Html.ActionLink("Călătorie", "Travel", "Home")</li> 

                   
                        
                    <li class="@Html.ActionLink("Activități", "Activities", "Home") dropdown"> 
                        <a li class="dropdown-toggle" data-toggle="dropdown" href="#">

                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Relaxare", "Relax", "Home")</li>
                            <li>@Html.ActionLink("Restaurante", "Eat", "Home")</li>
                            <li>@Html.ActionLink("Play", "Play", "Home")</li>
                        </ul>
                    </li>
                    <li style="margin:10px 20px; padding:5px 5px;">@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Platformă versatilă pentru turiști</p>
        </footer>
    </div>

    <!--copy image adress-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
