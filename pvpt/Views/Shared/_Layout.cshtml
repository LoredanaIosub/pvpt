<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

   <style>
       li:hover {
           background-color: lightgray;
           border-radius: 30%;
       }
   </style>

</head>
<body>
    <div style="background-color:white;" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div style="margin:0px 150px 0px 0px;" class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="https://i.imgur.com/dQpMLc4.jpg" alt="W3Schools.com"> <!--logo Brasov-->
                <!--@Html.ActionLink("Welcome to Brasov", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })-->
            </div>
            <div class="navbar-collapse collapse">
                <ul  class="nav navbar-nav">
                    <li style="margin:10px 20px; padding:5px 5px; font-family:'Brush Script MT',cursive;">@Html.ActionLink("HOME", "Index", "Home")</li>
                    <li style="margin:10px 20px; padding:5px 5px; font-family:'Brush Script MT',cursive;">@Html.ActionLink("ABOUT ", "About", "Home")</li>
                    <li style="margin:10px 20px; padding:5px 5px; font-family:'Brush Script MT',cursive;">@Html.ActionLink("TRAVEL", "Travel", "Home")</li>
                    <li style="margin:10px 20px; padding:5px 5px; font-family:'Brush Script MT',cursive;">@Html.ActionLink("EAT", "Eat", "Home")</li>
                    <li style="margin:10px 20px; padding:5px 5px; font-family:'Brush Script MT',cursive;">@Html.ActionLink("RELAX", "Relax", "Home")</li>
                    <li style="margin:10px 20px; padding:5px 5px;">@Html.ActionLink("CONTACT", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <!--copy image adress-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
